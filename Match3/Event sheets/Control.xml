                                        </condition>
                                    </conditions>
                                    <actions />
                                    <sub-events>
                                        <event-block sid="6194185741865024">
                                            <conditions>
                                                <condition id="-8" name="Is boolean instance variable set" sid="7708788542528407" type="Manager">
                                                    <param id="0" name="Instance variable">isFirstPass</param>
                                                </condition>
                                            </conditions>
                                            <actions>
                                                <action id="-9" name="Destroy" sid="4409352154928282" type="Item" />
