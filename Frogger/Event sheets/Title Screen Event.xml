                    <param id="1" name="Value">score</param>
                </action>
                <action id="0" name="Call function" sid="4176126671752317" type="Function">
                    <param id="0" name="Name">&quot;refreshScoreboard&quot;</param>
                    <param id="1" name="Parameter {n}"></param>
