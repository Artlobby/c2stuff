                <condition id="9" name="On item exists" sid="553153478286053" type="LocalStorage">
                    <param id="0" name="Key">FROGGER_KEY</param>
                </condition>
            </conditions>
            <actions>
                <action id="1" name="Get item" sid="8071363812133515" type="LocalStorage">
